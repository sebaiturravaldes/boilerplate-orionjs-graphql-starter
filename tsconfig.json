{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "lib": [
      "es2020"
    ],
    "skipLibCheck": true,
    "strict": false,
    "declaration": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "noImplicitAny": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "outDir": "./.orion/build/app",
    "rootDir": "./app",
    "baseUrl": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}